def menu():
    print('''
1. Censys 
2. NS lookup
3. Port scan
4. Whois lookup
5. Detect honeypot
6. Reverse IP lookup
7. Detect web technologies
''' )


def iGTentry(choice):
    banner()
    while True:
        menu()
        result = False
        choice = input('~: ')
        if not choice in set(['1','2','3','4','5','6','7']):
           print("Invalid input, exiting now")
           break
        iGT(choice)
        input('Press any key to continue')
        banner()


try:
    iGTentry(choice)
except KeyboardInterrupt:
        quit('')
